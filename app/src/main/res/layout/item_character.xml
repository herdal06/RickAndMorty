<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    android:elevation="@dimen/medium_padding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Day"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCharacterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/name_example"
                android:textColor="@color/headerTextColor"
                android:textSize="@dimen/double_extra_large_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCharacterStatus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/extra_small_margin"
                    android:layout_marginTop="@dimen/extra_small_margin"
                    android:contentDescription="@string/character_status_color"
                    android:src="@drawable/ic_baseline" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/triple_extra_small_margin"
                    android:layout_marginTop="@dimen/extra_small_margin"
                    android:text="@string/status_example"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/large_size" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/triple_extra_small_margin"
                    android:layout_marginTop="@dimen/extra_small_margin"
                    android:text="@string/hyphen"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/large_size" />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/triple_extra_small_margin"
                    android:layout_marginTop="@dimen/extra_small_margin"
                    android:text="@string/gender_example"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/large_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/extra_small_margin"
                android:layout_marginTop="@dimen/extra_small_margin"
                android:text="@string/first_seen_in"
                android:textColor="@color/textColor" />

            <TextView
                android:id="@+id/tvFirstSeenIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/extra_small_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/location_example"
                android:textColor="@color/textColor"
                android:textSize="@dimen/large_size" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>